<div class="container-fluid">
  <div class="post card text-center">
    <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form id="edit-post-form" class="card-body text-center">
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <label class="form-label text" for="post-title">Title</label>
    <input type="text" name="post-title" value="{{post.title}}" class="form-input" />
      <br />
    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" class="form-input">{{post.body}}</textarea>
      <br />
    <button type="submit" class="btn btn-outline-warning">Update</button>
  
    <button type="button" id="delete-btn" class="btn btn-outline-danger">Delete</button>
  </form>
</div>
</div>


<script src="/js/edit.js"></script>