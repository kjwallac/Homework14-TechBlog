<div class="jumbotron jumbotron-fluid" style="background-image: url(https://images.pexels.com/photos/414630/pexels-photo-414630.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260); background-size: 100%;">
  <div class="container">
    <h1 class="display-4" style="color:smoke; font-weight: bold; text-shadow: 1px 1px rgb(183, 183, 183)">Computers & Coffee</h1>
    <h4 class="lead" style="color:whitesmoke; text-shadow: 1px 1px rgb(183, 183, 183)">I'll put my opinions here. You can read them.. or not.</h4>
  </div>
</div>

<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.User.username}} on {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>

  {{#if post.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>